<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="alerts"
        android:enabled="true"
        android:icon="@drawable/shortcut_alerts"
        android:shortcutShortLabel="@string/notifications"
        android:shortcutLongLabel="@string/notifications">
