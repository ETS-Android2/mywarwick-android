            android:action="uk.ac.warwick.my.app.SHORTCUT_ALERTS"
            android:targetPackage="@string/package_name"
            android:targetClass="uk.ac.warwick.my.app.activities.MainActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
    <shortcut
        android:shortcutId="activity"
